name: Update Metrics Dashboard

on:
  schedule:
    - cron: '0 0 * * *'
  workflow_dispatch:
    inputs:
      organization:
        description: 'GitHub organization name (optional; prefer vars.GH_ORG_NAME)'
        required: false
        type: string
  push:
    branches: [ main ]
    paths:
      - 'metrics/**'
      - '.github/workflows/metrics-dashboard.yml'

permissions:
  contents: read
  pages: write
  id-token: write
  actions: read
  pull-requests: read
  issues: read
  security-events: read
  metadata: read

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  collect-metrics:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: '3.11'
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run tests
        run: |
          python -m pytest -q

      - name: Prepare directories
        run: |
          mkdir -p data/raw data/aggregated site data/history data/meta

      - name: Collect repository metrics
        env:
          GITHUB_ORG: ${{ vars.GH_ORG_NAME || github.repository_owner }}
          ORG_READ_TOKEN: ${{ secrets.ORG_READ_TOKEN }}
        run: |
          set -euo pipefail
          if [ -n "${ORG_READ_TOKEN:-}" ]; then
            export GITHUB_TOKEN="$ORG_READ_TOKEN"
          else
            echo "ORG_READ_TOKEN not set. Falling back to GitHub token."
            export GITHUB_TOKEN="${{ github.token }}"
          fi

          echo "Collecting metrics for: $GITHUB_ORG"
          python metrics/collect.py

          FILE_COUNT=$(ls -1 data/raw/*.json 2>/dev/null | grep -v '/_' | wc -l)
          echo "Collected data for $FILE_COUNT repositories"
          if [ "$FILE_COUNT" -eq 0 ]; then
            echo "ERROR: No repository data collected!"
            exit 1
          fi

      - name: Aggregate metrics
        run: |
          set -euo pipefail
          python metrics/aggregate.py
          test -f data/aggregated/dashboard.json

      - name: Render dashboard
        env:
          GITHUB_ORG: ${{ vars.GH_ORG_NAME || github.repository_owner }}
        run: |
          set -euo pipefail
          python metrics/render_dashboard.py
          test -f site/index.html

      - uses: actions/upload-pages-artifact@v3
        with:
          path: site/

      - uses: actions/upload-artifact@v4
        with:
          name: metrics-data
          path: data/
          retention-days: 30

  deploy:
    needs: collect-metrics
    runs-on: ubuntu-latest
    permissions:
      pages: write
      id-token: write
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - uses: actions/configure-pages@v5
      - id: deployment
        uses: actions/deploy-pages@v4